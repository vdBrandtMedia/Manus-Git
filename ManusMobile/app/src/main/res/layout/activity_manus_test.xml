<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.manusmachina.labs.manusmobile.ManusTestActivity$PlaceholderFragment"
    android:id="@+id/yourname">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:visibility="visible">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="btn Hold 1        E"
            android:onClick="eButton"
            android:id="@+id/btnHold1"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Hold is false"
            android:id="@+id/holdText1"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="btn Hold 2        A"
            android:onClick="aButton"
            android:id="@+id/btnHold2"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Hold is false"
            android:id="@+id/holdText2"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="btn Hold 3        D"
            android:onClick="dButton"
            android:id="@+id/btnHold3"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Hold is false"
            android:id="@+id/holdText3"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="btn Hold 4        G"
            android:onClick="gButton"
            android:id="@+id/btnHold4"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Hold is false"
            android:id="@+id/holdText4"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="btn Hold 5        B"
            android:onClick="bButton"
            android:id="@+id/btnHold5"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hold is false"
            android:id="@+id/holdText5"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="btn Hold 6        e"
            android:onClick="heButton"
            android:id="@+id/btnHold6"
            android:layout_marginBottom="30dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hold is false"
            android:id="@+id/holdText6"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/linearLayout"
        android:visibility="visible">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Yaw"
                android:id="@+id/textView" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/yaw"
                android:indeterminate="false"
                android:max="360" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Pitch"
                android:id="@+id/textView2" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pitch"
                android:max="180" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Roll"
                android:id="@+id/textView3" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/roll"
                android:max="360" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Fingers"
                android:id="@+id/textView4" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/thumb"
                android:max="255" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/index"
                android:max="255" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/middle"
                android:max="255"
                android:indeterminate="false" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ring"
                android:max="255" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pinky"
                android:max="255" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latency"
                android:id="@+id/textView5" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/interval"
                android:max="100"
                android:indeterminate="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finger bend Count"
                android:id="@+id/textView6" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fingerCount"
                android:indeterminate="false"
                android:max="5" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Thumb"
                    android:id="@+id/textView7"
                    android:layout_below="@+id/scrollView"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:gravity="left"
                    android:layout_gravity="left" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Thumb"
                    android:id="@+id/fingerBend0"
                    android:layout_below="@+id/scrollView"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:layout_gravity="right" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Index"
                    android:id="@+id/textView8"
                    android:layout_below="@+id/scrollView"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:gravity="left"
                    android:layout_gravity="left" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="index"
                    android:id="@+id/fingerBend1"
                    android:layout_below="@+id/scrollView"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:layout_gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Middle"
                    android:id="@+id/textView9"
                    android:layout_below="@+id/scrollView"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:gravity="left"
                    android:layout_gravity="left" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Middle"
                    android:id="@+id/fingerBend2"
                    android:layout_below="@+id/scrollView"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:layout_gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Ring"
                    android:id="@+id/textView10"
                    android:layout_below="@+id/scrollView"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:gravity="left"
                    android:layout_gravity="left" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Ring"
                    android:id="@+id/fingerBend3"
                    android:layout_below="@+id/scrollView"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:layout_gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Pink"
                    android:id="@+id/textView11"
                    android:layout_below="@+id/scrollView"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:gravity="left"
                    android:layout_gravity="left" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Pink"
                    android:id="@+id/fingerBend4"
                    android:layout_below="@+id/scrollView"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:layout_gravity="right" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
